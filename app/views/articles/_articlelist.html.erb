<div class="container">

  <div id="articles">
    <div id="content-header text-center row justify-content-md-center mb-4">
      <div class="col-md-8" id="create-link">
        <i>Total Articles: <%= @total_articles %></i>
        <% if logged_in? and (
          if @user
            @user == current_user
          else
            @category ? false : true
          end)%>
          <%= link_to 'Create Article', new_article_path, class: 'btn btn-primary' %>
        <% else %>
          <i>Per page: <%= @articles.length %></i>
        <% end %>
      </div>
    </div>
    <br>
    <% if @articles.length > 0 %>
      <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
          <div class="col-md-8">
            <div class="card border-5 text-center mb-5 bg-white rounded" id='article-card'>
              <% if !@user && article.user %>
                <div class="card-header">
                  <i class="text-muted">by <%= link_to article.user.username, user_path(article.user) %></i>
                </div>
              <% end %>
              <div class="card-body">
                <% if article.categories.length > 0 %>
                  <small class="mb-4 text-center d-block" id="tags">
                    <b>Tags: &nbsp;</b> <%= render article.categories %>
                  </small>
                <% end %>
                <h5 class="card-title"><%= link_to article.title, article_path(article), class: 'text-decoration-none' %></h5>
                <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                <!--          <a href="#" class="btn btn-primary">Go somewhere</a>-->
                <%= link_to 'View', article_path(article), class: 'btn btn-outline-success' %>
                <% if logged_in? && (article.user == current_user || current_user.admin?) %>
                  <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-primary' %>
                  <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-outline-danger' %>
                <% end %>
              </div>
              <div class="card-footer text-muted">
                <small><i>Created <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %> ago</i></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center">No Articles</p>
    <% end %>
  </div>
</div>