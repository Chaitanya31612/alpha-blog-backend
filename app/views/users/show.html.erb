<h1 class="text-center my-5 fw-bolder"><%= @user.username %>'s Profile</h1>

<%= gravatar_for @user, size: 200 %>
<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to 'Edit your profile', edit_user_path(@user), class: 'btn btn-outline-info' %>
  </div>
<% end %>

<h3 class="mt-5 text-center text-decoration-underline">Articles</h3>

<%= render 'articles/articlelist' %>

<div class="flickr_pagination mb-5">
  <%= will_paginate @articles, :container => false %>
</div>
